{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "go",
    "echoCommand": true,
    "options": {
        "cwd": "${fileDirname}"
    },
    "tasks": [
        {
            "label": "go build",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-v"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "go run",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "*.go"
            ],
            "problemMatcher": []
        },
        {
            "label": "go test",
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "./..."
            ],
            "problemMatcher": [],
            "group": "test"
        }
    ]
}